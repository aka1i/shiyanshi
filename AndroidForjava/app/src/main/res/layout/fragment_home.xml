<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/yellow"></View>

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/yellow">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/head_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/head_img" />

        <RelativeLayout
            android:id="@+id/top_text_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/head_img"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="闽侯县"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/unfold"/>

            <TextView
                android:id="@+id/weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/position"
                android:text="多云 22°C"
                android:textSize="10sp" />
        </RelativeLayout>




        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/top_text_rl">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/add_img"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/white_background"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/search_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/search"
                    android:layout_margin="5dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/search_img"
                    android:text="生鲜海鲜饭"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/voice_fill"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:layout_centerInParent="true"/>


            </RelativeLayout>

            <ImageView
                android:id="@+id/add_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/add"/>


        </RelativeLayout>

    </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/button_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/white_background2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/big_item1_rl"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginRight="15dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/big_item1_background">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@drawable/big_item1"/>
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="美食"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/big_item1_rl"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/big_item2_rl"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginRight="15dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/big_item2_background">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@drawable/big_item2"/>
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="电影/演出"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/big_item2_rl"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/big_item3_rl"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginRight="15dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/big_item3_background">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@drawable/big_item3"/>
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="酒店住宿"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/big_item3_rl"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/big_item4_rl"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginRight="15dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/big_item4_background">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@drawable/big_item4"/>
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="休闲娱乐"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/big_item4_rl"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/big_item5_rl"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginRight="15dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/big_item5_background">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@drawable/big_item5"/>
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="外卖"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/big_item5_rl"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_rv"
                android:layout_below="@+id/button_rl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>



        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>


</LinearLayout>